# format name:command for sysmenu to get the program commands from

# Window manager
poweroff:wmaction poweroff
reboot  :wmaction reboot
exit    :wmaction shell
logout  :wmaction exit

# utils
screenshot :screenshot
pass       :passbemenu
fnottmgr   :fnottmgr
spawn      :bemenu-run

bg_reload: killall swaybg ; swaybg --image $DWL_WALLPAPER &
bar_reload:killall yambar ; yambar &

# Other programs
foot     :foot
term     :foot
shell    :foot
nvim     :foot sh -c nvim
htop     :foot sh -c htop
yazi     :foot sh -c yazi
fm       :foot sh -c yazi
qalc     :foot sh -c qalc
waterfox :waterfox
firefox  :firefox
inkscape :inkscape
gimp     :gimp
discord  :discord
blender  :blender
