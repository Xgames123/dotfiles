alias clr=clear
alias grep="rg"
alias ls="ls --color=auto"
alias lsa="ls -a --color=auto"
alias lsl="ls -l --color=auto"
alias lsla="ls -l -a --color=auto"
alias fm="yazi"
alias q="qalc"
alias n=nvim
alias ":q"="exit"

# nav
alias edit="$EDITOR"
alias notes="cd $NOTES_DIR;$EDITOR README.md"
alias aur="cd $AUR_DIR; cd"
alias repos="cd $HOME/source/repos; cd"


# git
alias gpl="git pull"
alias gits="git status"
alias gaa="git add ."
alias gcm="git commit"
alias gpu="git push"
alias gsy="git sync"

# dotfiles
alias dot='git --git-dir=$HOME/.dotfiles/git/ --work-tree=$HOME'
alias dotignore="$EDITOR $HOME/.gitignore"
alias dots="dot status"

