{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{.Shell}}: {{.Folder}}",
  "final_space":true,
  "version": 2,
  "var":{
  },

  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "newline": false,
      "segments": [
        {
           "type":"text",
           "style":"plain",
           "foreground": "darkGray",
           "properties": {
           },
           "template":"╭(<yellow>{{ .UserName }}</><darkGray>@</><yellow>{{ .HostName }}</>)"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": false,
      "type": "prompt",
      "filler": "─",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "darkGray",
          
          "template":"-[ <yellow> {{ .Path }}</> ]",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "darkGray",
          "template": "[ <yellow>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}</> ]", 
          "properties": {
          "fetch_status": true
          }
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "type": "prompt",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "darkGray",

          "template":"╰[ <yellow> {{ .Path }}</> ]",
          "properties": {
          "style": "folder"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "darkGray",

          "template":" <yellow>{{ if .Root }}#{{ else }}${{ end }}</>",
          "properties": {
          "style": "folder"
          }
        }
      ]
    }
    

    
  ],
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "yellow",
    "template": ">"
  }
}
  
