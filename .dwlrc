# Gets run when dwl starts

WALLPAPER="$HOME/Pictures/Wallpapers/arch1.png"
BAR="yambar"

systemctl --user import-environment XDG_CURRENT_DESKTOP XDG_SESSION_DESKTOP XDG_SESSION_TYPE WAYLAND_DISPLAY
dbus-update-activation-environment --systemd XDG_CURRENT_DESKTOP XDG_SESSION_DESKTOP XDG_SESSION_TYPE WAYLAND_DISPLAY
systemctl --user restart xdg-desktop-portal &

$BAR &
onedriver $HOME/OneDrive &
fnott &

# Wait for onedriver to load
while [ ! -f $WALLPAPER ]; do
  sleep 1
done
swaybg --image $WALLPAPER &

